{
  "name": "gitsafe",
  "version": "1.0.2",
  "description": "A CLI tool to prevent common Git mistakes.",
  "main": "dist/index.js",
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "tsc && chmod +x ./dist/index.js",
    "prepare": "husky",
    "prepublishOnly": "npm run build"
  },
  "bin": {
    "gitsafe": "./dist/index.js"
  },
  "keywords": [
    "git",
    "cli",
    "developer-tools",
    "husky",
    "conventional-commits",
    "safety",
    "automation"
  ],
  "author": "Osman Ekrem Korkmaz <korkmazosmanekrem@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/osmanekrem/gitsafe.git"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "inquirer": "^8.2.6",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.9",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^18.7.18",
    "husky": "^9.1.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  }
}
